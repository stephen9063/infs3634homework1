<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF9800"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <include
                android:id="@+id/sydney"
                layout="@layout/sydney"/>

            <include
                android:id="@+id/london"
                layout="@layout/london"></include>

            <include
                android:id="@+id/beijing"
                layout="@layout/beijing"></include>

            <include
                android:id="@+id/newyork"
                layout="@layout/new_york"></include>

            <include
                android:id="@+id/hongkong"
                layout="@layout/hong_kong"></include>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>